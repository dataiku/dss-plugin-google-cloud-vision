{
    "meta": {
        "label": "Text Detection - Images",
        "description": "Detect text (typed in 58 languages) in images",
        "icon": "icon-gcp-cloud-vision-api icon-cloud",
        "displayOrderRank": 2
    },
    "kind": "PYTHON",
    "selectableFromFolder": "input_folder",
    "inputRoles": [
        {
            "name": "input_folder",
            "label": "Image folder",
            "description": "Folder containing images with typed text",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": false,
            "acceptsManagedFolder": true
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Detected text dataset",
            "description": "Dataset with detected text for each image",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        },
        {
            "name": "output_folder",
            "label": "Annotated image folder (optional)",
            "description": "Folder with text bounding boxes drawn on each image",
            "arity": "UNARY",
            "required": false,
            "acceptsDataset": false,
            "acceptsManagedFolder": true
        }
    ],
    "paramsPythonSetup": "get_language_list.py",
    "params": [
        {
            "name": "separator_configuration",
            "label": "Configuration",
            "type": "SEPARATOR"
        },
        {
            "name": "api_configuration_preset",
            "label": "API configuration preset",
            "type": "PRESET",
            "parameterSetId": "api-configuration",
            "mandatory": true
        },
        {
            "name": "separator_advanced",
            "label": "Advanced",
            "type": "SEPARATOR"
        },
        {
            "name": "expert",
            "label": "Expert mode",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "type": "SELECT",
            "name": "language_hint",
            "label": "Language hint",
            "getChoicesFromPython": true,
            "mandatory": false,
            "defaultValue": "",
            "visibilityCondition": "model.expert",
            "description": "Let the model detect the language (recommended) or force a specific language"
        },
        {
            "name": "error_handling",
            "label": "Error handling",
            "type": "SELECT",
            "visibilityCondition": "model.expert",
            "selectChoices": [
                {
                    "value": "FAIL",
                    "label": "Fail"
                },
                {
                    "value": "LOG",
                    "label": "Log"
                }
            ],
            "defaultValue": "LOG",
            "mandatory": true,
            "description": "Log API errors to the output or fail with an exception on any API error"
        }
    ]
}